<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_info_module_datepick_requird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/module_requird_text"
        android:textSize="16sp"
        android:textColor="@color/cc_red"
        />

        <TextView
        android:id="@+id/tv_widget_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:text="@string/widget_edit_title"
        android:textSize="@dimen/font_16"
        android:textColor="@color/black_85"
        />

    <LinearLayout
        android:id="@+id/ll_user_widget_wrapper"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:layout_marginStart="@dimen/margin_left_8dp"
        android:layout_marginEnd="@dimen/margin_left_8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="end"
            android:textSize="@dimen/font_16"
            android:textColor="@color/black_65"
            android:maxHeight="250dp"
            android:hint="@string/widget_edit_default_hint"
            android:textColorHint="@color/black_65"
            />

    </LinearLayout>


</LinearLayout>