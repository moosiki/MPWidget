<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <TextView
        android:id="@+id/tv_info_module_datepick_requird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/module_requird_text"
        android:textSize="16sp"
        android:textColor="@color/cc_red"
        android:layout_marginStart="@dimen/margin_card_10dp"
        />
    <TextView
        android:id="@+id/tv_widget_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_info_module_datepick_requird"
        android:paddingTop="@dimen/padding_5dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:text="@string/widget_edit_title"
        android:textSize="@dimen/font_16"
        android:textColor="@color/black_85"
        />
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_info_module_datepick_requird"
        android:layout_below="@+id/tv_widget_edit_title"
        android:background="@null"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:textSize="@dimen/font_16"
        android:textColor="@color/black_65"
        android:maxHeight="250dp"
        android:hint="@string/widget_edit_title"
        android:textColorHint="@color/black_65"
        />
</RelativeLayout>