<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle">
    <!--设置边距-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="8dp"
        />
    <!-- 设置圆角矩形 -->
    <corners android:radius="4dp"/>
    <!--设置背景颜色-->
    <solid android:color="@color/shadow_grey_bg1"/>
    <!--设置边框粗细和颜色-->
    <stroke
        android:width="1dp"
        android:color="@color/shadow_grey_frame"/>
</shape>
